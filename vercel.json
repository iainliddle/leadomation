{
    "installCommand": "npm install --legacy-peer-deps",
    "build": {
        "env": {
            "NPM_FLAGS": "--legacy-peer-deps"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/run-sequences",
            "schedule": "0 * * * *"
        }
    ]
}